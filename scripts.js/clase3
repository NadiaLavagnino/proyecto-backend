const { get } = require("https");

class productMananger {
    constructor(){
        this.product= [];
        this.id=0;
    }
    
    addProducts(title,description,price,thumbnail,code,stock){
        if(!title || !description || !price || !thumbnail || !code || !stock){
            console.error('Error: todos los campos son obligatorios');
            return;
        }
    const productExistente = this.find((product) => product.code === code)
    if (productExistente){
        console.error(`error: ya existe ese producto con el codigo ${code}`);
        return;
    }
    this.id++

    const newProduct ={
        id:this.id,
        title,
        description,
        price,
        thumbnail,
        code,
        stock,
    };
    this.product.push(newProduct);
    console.log(`producto agregado con exito. Nuevo producto : ${JSON.stringify(newProduct)}`)
    }
    getProducts(){
        return console.log(this.products);
    }
